page {
  background-color: #fff;/*背景颜色*/
}
/*容器*/
.containe {
     padding: 45rpx 20rpx;
}
/*调整logo*/
.logo image {
  width: 300rpx;
  height: 200rpx;
  display:flex;
  margin-top: 50rpx;
  justify-content:center;
  align-items:center;
}

.nav-list {
  width: 100%;
  height: 200rpx;
  border-radius: 25rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 24rpx -4rpx rgba(0, 0, 0, 1);
  display:flex;
  justify-content:space-between;/*上下垂直*/
  align-items:center;
  padding: 10rpx 20rpx;
  margin-top: 40rpx;
}

.na-title{
  font-family: 隶书;
  font-size: 25rpx;
  color:#3d3d3d;
  margin-top: 4rpx;
  
}

.nav-item{
  margin-top: 26rpx;
  width: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content:center;/*垂直*/
  align-items:center;
}

.nav-item image {
  width: 80rpx;
  height: 80rpx;
}

.tody-course{
  width: 100%;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0rpx 0rpx 24rpx -4rpx rgba(0, 0, 0, 0.1);
  margin-top: 30rpx;
  padding: 30rpx ;
}

.today-schedule{
  width: 100%;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0rpx 0rpx 24rpx -4rpx rgba(0, 0, 0, 0.1);
  margin-top:0rpx;
  padding: 30rpx ;
}
.course-option{
  display:flex;
  justify-content:space-between;/*上下垂直*/
  align-items:center;
  height: 100rpx;
  margin-top: 0rpx;
  padding: 5rpx 40rpx ;
}

.option-title{
  font-size: 40rpx;
  color: rgb(233, 200,45);
  font-weight: 500;
}

.option-time{
  font-size: 40rpx;
  color: #fcd83a;
  font-weight: 500;
}

.course-box{
  margin-top:-20rpx;
}

.schedule-box{
  margin-top:-20rpx;
}

.course-box.empty-image{
  width: 250rpx;
  height: 130rpx;
}

.schedule-box.empty-image{
  width: 250rpx;
  height: 130rpx;
}
.course-box.empty-title{
  font-size: 40rpx;
  color: rgb(41, 41, 40);
  font-weight: 500;
}
.schedule-box.schedule-content{
  font-size: 40rpx;
  color: rgb(41, 41, 40);
  font-weight: 500;
}
.course-list{
  width: 100%;
}
.course-items{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}
.course-item:not(:last-child){
  border-bottom: 1rpx solid #f55656;
}
.course-name{
  color: #13110b;
}
.course-section{
  font-size: 30rpx;
  color: #3d4b50;
}
.course-address{
  font-size: 30rpx;
  color: #8d8763;
}

.schedule-items{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}
.schedule-item:not(:last-child){
  border-bottom: 1rpx solid #8f3232;
}
.schedule-name{
  color: #13110b;
}
.schedule-section{
  font-size: 30rpx;
  color: #3d4b50;
}