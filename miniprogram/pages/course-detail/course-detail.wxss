page {
  background: #fafafa;
}

.info-box {
  background-color: #fff;
  padding: 30rpx 30rpx 0;
}

.course-title {
  font-size: 32rpx;
  color: #000000;
}

.info-list {
  margin-top: 10rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 50rpx 30rpx;
}

.info-item:not(:last-child) {
  border-bottom: 1rpx solid rgba(158, 216, 250, 0.82);
}

.info-item__key {
  color: #15a1ff;
  margin-right: 40rpx;
}

.info-item__val {
  color: #666666;
}
